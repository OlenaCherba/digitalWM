extends layout.pug


block content
    h1 Create new username and password

    form(action="/reg" method="post")
        div(class="form-group")
            label(for="inputUsername") Login
            input(type="text", class="form-control", id="inputUsername", placeholder="UserName", name="username")
        div(class="form-group")
            label(for="inputPassword") Password
            input(type="password", class="form-control", id="inputPassword" placeholder="Password", name="password")
        div(class="form-group")
            label(for="confPassword") Confirm your password
            input(type="password", class="form-control", id="confPassword" placeholder="ConfirmPassword", name="confPassword")
        div(class="form-group")
            button(type="submit", class="btn btn-primary") Sign in

    if login_error
        div(class="alert alert-danger" role="alert") #{login_error}